<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <%= @book.errors.count %>errors prohibited this obj from being saved<br>
      <% @book.errors.full_messages.each do |message| %><br>
        <%= message %>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title, class:"form-control" %>
        <h6>Opinion</h6>
        <%= f.text_area :body, class:"form-control" %><br>
        <%= f.submit 'Update Book', class:"btn btn-success" %>
      <% end %>
      <%= link_to 'Show', book_path %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>