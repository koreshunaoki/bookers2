<% if @user.errors.any? %>
  <div>
    <ul style="color: red">
      <%= @user.errors.count %>errors prohibited this obj from being saved<br>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class_field>
          <h6>Name</h6>
          <%= f.text_field :name, class:"form-control name" %>
        </div>
        <h6>Image</h6>
        <div>
          <%= f.attachment_field :profile_image, class:"form-control-file user_image" %>
        </div>
        <div class_field>
          <h6>Introduction</h6>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div>
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>